---
import App from "../components/App.svelte";
import Layout from "../layouts/Layout.astro"
---

<Layout title="résumé: betich">
    <App client:load />
</Layout>

<style lang="css">
  main {
    overflow-x: hidden;
  }

  a {
    text-decoration: underline;
  }

  section {
    @apply my-4;
  }

  section h2 {
    @apply font-semibold;
  }

  section hr {
    @apply mb-2 mt-0;
    border-color: darkgrey;
  }

  :global(.print-only) {
    display: none;
  }

  @media print {
    * {
      @apply text-xs;
    }

    :global(.print-only) {
      display: inherit;
    }

    :global(.web-only) {
      display: none;
    }

    ul {
      @apply pl-6;
    }

    section {
      @apply my-2;
    }

    section hr {
      @apply mb-1 mt-0;
    }

    main {
      margin: 0 0;
      padding: 0;
    }
  }
</style>
